# Variables de entorno para PRODUCCIÓN en DigitalOcean
# ⚠️ IMPORTANTE: Nunca commitear este archivo con valores reales
# Copia este archivo a .env.production y configura los valores reales

# === CONFIGURACIÓN DE APLICACIÓN ===
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info
WORKERS=4

# === CONFIGURACIÓN DE API ===
API_HOST=0.0.0.0
API_PORT=8000

# ⚠️ CAMBIAR: Configurar dominio real
DOMAIN=your-api-domain.com
CORS_ORIGINS=https://your-api-domain.com,https://your-frontend-domain.com

# === CONFIGURACIÓN DE PROCESAMIENTO ===
MIN_AREA=50000
PDF_DPI=300
THRESHOLD_MIN=51
THRESHOLD_MAX=9
OCR_LANGUAGES=es,en
OCR_ENGINE=easyocr
MAX_FILE_SIZE=100
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg

# === CONFIGURACIÓN DE ARCHIVOS ===
# Usar rutas absolutas en producción
DATA_PATH=/opt/madein-api/data
UPLOAD_DIR=/app/uploads
OUTPUT_DIR=/app/outputs

# === CONFIGURACIÓN DE SEGURIDAD ===
# ⚠️ GENERAR: Token seguro para API
# Comando: openssl rand -hex 32
API_TOKEN=CHANGE_THIS_TO_SECURE_RANDOM_TOKEN

# === CONFIGURACIÓN DE SSL ===
# ⚠️ CONFIGURAR: Para HTTPS automático con Let's Encrypt
ENABLE_HTTPS=true
# Email para certificados Let's Encrypt
EMAIL=admin@your-domain.com

# === CONFIGURACIÓN DE LOGGING ===
LOG_FORMAT=json
LOG_FILE=/app/logs/madein-api.log

# === CONFIGURACIÓN DE DOCKER ===
MEMORY_LIMIT=4
CPU_LIMIT=2.0

# === CONFIGURACIÓN DE MONITOREO ===
# Habilitar métricas (opcional)
ENABLE_METRICS=true
METRICS_PORT=9090

# === CONFIGURACIÓN DE RATE LIMITING ===
# Límites por IP
RATE_LIMIT_PER_MINUTE=60
UPLOAD_RATE_LIMIT_PER_MINUTE=10

# === CONFIGURACIÓN DE DIGITALOCEAN ===
# Región del droplet
DO_REGION=nyc1
# Tamaño del droplet
DO_SIZE=s-2vcpu-4gb

# === VARIABLES DE DEPLOYMENT ===
# Branch a desplegar
DEPLOY_BRANCH=main
# Registry de Docker (si usas uno privado)
DOCKER_REGISTRY=registry.digitalocean.com/your-registry

# === CONFIGURACIÓN DE TIMEZONE ===
TZ=America/Mexico_City 