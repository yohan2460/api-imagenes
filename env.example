# Variables de entorno para MADEIN Image Processing API
# Copia este archivo a .env y modifica los valores según tus necesidades

# === CONFIGURACIÓN DE LA API ===
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=info

# === CONFIGURACIÓN DE PROCESAMIENTO ===
# Área mínima para detección de comprobantes (en píxeles cuadrados)
MIN_AREA=50000

# DPI para conversión de PDF a imagen
PDF_DPI=300

# Configuración de threshold para detección
THRESHOLD_MIN=51
THRESHOLD_MAX=9

# === CONFIGURACIÓN DE OCR ===
# Idiomas para OCR (separados por coma)
OCR_LANGUAGES=es,en

# Motor de OCR preferido (easyocr, tesseract)
OCR_ENGINE=easyocr

# === CONFIGURACIÓN DE ARCHIVOS ===
# Directorio para uploads temporales
UPLOAD_DIR=/app/uploads

# Directorio para archivos de salida
OUTPUT_DIR=/app/outputs

# Tamaño máximo de archivo (en MB)
MAX_FILE_SIZE=50

# Formatos de archivo permitidos (separados por coma)
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg

# === CONFIGURACIÓN DE CORS ===
# Dominios permitidos para CORS (separados por coma)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# === CONFIGURACIÓN DE DESARROLLO ===
# Habilitar modo debug
DEBUG=false

# Habilitar recarga automática
RELOAD=true

# Número de workers (para producción)
WORKERS=1

# === CONFIGURACIÓN DE LOGGING ===
# Formato de logs (json, simple)
LOG_FORMAT=simple

# Archivo de logs (opcional)
LOG_FILE=

# === CONFIGURACIÓN DE SEGURIDAD ===
# Token para autenticación (opcional)
API_TOKEN=

# Habilitar HTTPS (true/false)
ENABLE_HTTPS=false

# === CONFIGURACIÓN DE DOCKER ===
# Límites de memoria (en GB)
MEMORY_LIMIT=2

# Límites de CPU
CPU_LIMIT=1.0

# === CONFIGURACIÓN DE BASE DE DATOS (SI SE NECESITA) ===
# URL de conexión a base de datos
DATABASE_URL=

# Pool de conexiones
DB_POOL_SIZE=5

# === CONFIGURACIÓN DE REDIS (SI SE NECESITA) ===
# URL de conexión a Redis para cache
REDIS_URL=

# TTL para cache (en segundos)
CACHE_TTL=3600 